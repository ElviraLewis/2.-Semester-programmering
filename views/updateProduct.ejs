        <select name="categories" id="productCategory">
          <option value="Portvin">Portvin</option>
          <option value="Gin">Gin</option>
          <option value="Vodka">Shoes and Clothes</option>
          <option value="Vin">Vin</option>
          <option value="Andet">Andet</option>
        </select>
      </form>
      Price:
      <input
        type="number"
        name="productPrice"
        id="productPrice"
        placeholder="Product Price"
      />
      File: <input type="file" name="thumbnail" /><br /><br />

      Submit: <button id="submit">Submit</button>
    </form>

    <script src="/assets/js/updateProduct.js"></script>
