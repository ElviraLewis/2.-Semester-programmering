    <form id="submitproductform">

      ID: 
      <input
        type="text"
        name="productid"
        id="productid"
        placeholder="Product id"
      />

      Name:
      <input
        type="text"
        name="productName"
        id="productName"
        placeholder="Product Name"
      />

      <form action="#">
